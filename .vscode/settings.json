{
  "editor.formatOnSave": true,
  "eslint.validate": ["javascript", "javascriptreact"],
  "eslint.workingDirectories": ["./src", "./functions"],
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true
  },
  "html.format.enable": false,
  "search.exclude": {
    "**/node_modules": true,
    "**/build": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[markdown]": {
    "editor.quickSuggestions": {
      "strings": "on",
      "comments": "on",
      "other": "on"
    }
  },
  "[mdx]": {
    "editor.quickSuggestions": {
      "strings": "on",
      "comments": "on",
      "other": "on"
    }
  },
  "files.associations": {
    "*.mdx": "markdown"
  }
}
